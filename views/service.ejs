<div class="max-w-4xl mx-auto">
  <!-- Service Info -->
  <h2 class="text-3xl font-bold text-indigo-700 mb-2"><%= service.title %></h2>
  <p class="text-gray-600 mb-2"><%= service.description %></p>
  <p class="text-gray-700 mb-1"><span class="font-semibold">Price:</span> Rs.<%= service.price %></p>
  <p class="text-gray-700 mb-1"><span class="font-semibold">Location:</span> <%= service.location %></p>
  <p class="text-gray-700 mb-1"><span class="font-semibold">Provider:</span> <%= service.provider.name %></p>

  <!-- Average Rating -->
  <div class="flex items-center mt-2 mb-6">
    <span class="text-yellow-400 text-xl mr-2">
      <% for (let i = 1; i <= 5; i++) { %>
        <% if (i <= Math.round(service.averageRating)) { %> ★ <% } else { %> ☆ <% } %>
      <% } %>
    </span>
    <span class="text-gray-700 font-medium"><%= service.averageRating.toFixed(1) %> / 5</span>
  </div>

  <% if (user && user.role === 'user') { %>
    <h3 class="text-2xl font-bold text-indigo-700 mt-10 mb-4">Write a Review</h3>
    <form action="/services/<%= service._id %>/reviews" method="POST" class="bg-white p-6 rounded-lg shadow-md">
      <!-- Star Input -->
      <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700 mb-1">Your Rating</label>
        <div class="flex space-x-1 cursor-pointer" id="starRating">
          <% for (let i = 1; i <= 5; i++) { %>
            <span class="star text-2xl text-gray-300 hover:text-yellow-400" data-value="<%= i %>">★</span>
          <% } %>
        </div>
        <input type="hidden" name="rating" id="ratingInput" required>
      </div>
      <!-- Comment -->
      <div class="mb-4">
        <label for="comment" class="block text-sm font-medium text-gray-700">Your Comment</label>
        <textarea id="comment" name="comment" rows="3" 
          class="w-full px-3 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"
          required></textarea>
      </div>
      <button type="submit" 
        class="bg-indigo-600 text-white px-5 py-2 rounded-lg hover:bg-indigo-700 shadow-md">
        Submit Review
      </button>
    </form>
  <% } %>
  <!-- Reviews Section -->
  <h3 class="text-2xl font-bold text-indigo-700 mt-10 mb-4">Reviews</h3>


  <% if (reviews.length === 0) { %>
    <p class="text-gray-600">No reviews yet.</p>
  <% } else { %>
    <div class="space-y-4">
      <% reviews.forEach(review => { %>
        <div class="bg-white p-4 rounded-lg shadow-md">
          <!-- User Info -->
          <div class="flex items-center mb-2">
            <div class="w-10 h-10 flex items-center justify-center rounded-full bg-indigo-100 text-indigo-700 font-bold">
              <%= review.user.name.charAt(0).toUpperCase() %>
            </div>
            <div class="ml-3">
              <p class="font-semibold text-gray-800"><%= review.user.name %></p>
              <p class="text-gray-500 text-sm"><%= review.createdAt.toDateString() %></p>
            </div>
          </div>
          <!-- Rating -->
          <div class="text-yellow-400 text-lg mb-1">
            <% for (let i = 1; i <= 5; i++) { %>
              <% if (i <= review.rating) { %> ★ <% } else { %> ☆ <% } %>
            <% } %>
          </div>
          <!-- Comment -->
          <p class="text-gray-700"><%= review.comment %></p>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<!-- Star Rating Script -->
<script>
  const stars = document.querySelectorAll('#starRating .star');
  const ratingInput = document.getElementById('ratingInput');
  stars.forEach(star => {
    star.addEventListener('click', () => {
      const value = star.getAttribute('data-value');
      ratingInput.value = value;
      stars.forEach(s => {
        s.classList.remove('text-yellow-400');
        s.classList.add('text-gray-300');
      });
      for (let i = 0; i < value; i++) {
        stars[i].classList.remove('text-gray-300');
        stars[i].classList.add('text-yellow-400');
      }
    });
  });
</script>
