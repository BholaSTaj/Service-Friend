            window.location.href = `/services?q=${encodeURIComponent(query)}`;
        }
    });
    // Optional: Allow Enter key to trigger search
    document.getElementById('search-input').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            const query = this.value.trim();
            if (query) {
                window.location.href = `/services?q=${encodeURIComponent(query)}`;
            }
        }
    });
</script>