    // Add event listeners
    countryCodeSelect.addEventListener('change', handleCountryCodeChange);
    phoneNumberInput.addEventListener('input', handlePhoneNumberInput);

    // Initialize phone number input
    handleCountryCodeChange();
  });


  // confirm password
  document.addEventListener('DOMContentLoaded', () => {
    const passwordInput = document.getElementById('password');
    const confirmPasswordInput = document.getElementById('confirmPassword');
    const togglePasswordBtn = document.getElementById('togglePassword');
    const toggleConfirmPasswordBtn = document.getElementById('toggleConfirmPassword');
    const eyeIcon = document.getElementById('eyeIcon');
    const eyeIconConfirm = document.getElementById('eyeIconConfirm');
    const passwordError = document.getElementById('passwordError');
    const form = document.querySelector('form');

    // Toggle Password Visibility
    function toggleVisibility(input, icon) {
      const isPassword = input.type === 'password';
      input.type = isPassword ? 'text' : 'password';
      icon.innerHTML = isPassword
        ? `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.542-7a9.956 9.956 0 012.478-4.043M9.88 9.88a3 3 0 104.24 4.24" />
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 3l18 18" />`
        : `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />`;
    }

    togglePasswordBtn.addEventListener('click', () => toggleVisibility(passwordInput, eyeIcon));
    toggleConfirmPasswordBtn.addEventListener('click', () => toggleVisibility(confirmPasswordInput, eyeIconConfirm));

    // Check password match on form submit
    form.addEventListener('submit', (e) => {
      if (passwordInput.value !== confirmPasswordInput.value) {
        e.preventDefault();
        passwordError.classList.remove('hidden');
      } else {
        passwordError.classList.add('hidden');
      }
    });
  });
</script>